<h1>Home Page</h1>

<section id="feed-posts">
      <h4>Posts</h4>
      <form action="/posts/create" method="POST" id="new-post-form">
          <textarea name="content" rows="3"  cols="10"></textarea>
          <input type="submit" value="Post">
      </form>

      <div id="posts-list-container">

              <ul>
                    <%for(post of posts){%>
                         
                         <li><%= post.content %></li>
                         <small>
                               <%= post.user.name %>
                         </small>

                    <%}%>
              </ul>

      </div>
</section>
